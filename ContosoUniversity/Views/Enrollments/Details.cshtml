@model ContosoUniversity.Models.Enrollment

@{
    ViewData["Title"] = "Details";
}

<h1>Подробности</h1>

<div>
    <h4>Зачисление</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
          Оценка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grade)
        </dd>
        <dt class = "col-sm-2">
           Номер курса
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseID)
        </dd>
        <dt class = "col-sm-2">
            Студент
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstMidName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.EnrollmentID">Редактировать</a> |
    <a asp-action="Index">Обратно к списку </a>
</div>
