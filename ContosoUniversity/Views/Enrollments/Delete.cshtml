@model ContosoUniversity.Models.Enrollment

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>Зачисление</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Оценка
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grade)
        </dd>
        <dt class = "col-sm-2">
            Номер курса
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseID)
        </dd class>
        <dt class = "col-sm-2">
            Студент
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Student.FirstMidName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EnrollmentID" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Обратно к списку</a>
    </form>
</div>
